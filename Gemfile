# Gemfile

# 루비 Gem을 다운로드할 소스
source "https://rubygems.org"

# Jekyll의 버전을 명시 (GitHub Pages 호환성을 위해)
gem "jekyll", "~> 3.9" 

# Minimal Mistakes 테마 Gem
gem "minimal-mistakes-jekyll", "~> 4.24.0"

# --- 권장 플러그인 ---
gem "jekyll-feed", "~> 0.12"      # 포스트 RSS 피드 생성
gem "jekyll-include-cache", "~> 0.2" # 빌드 속도 향상
gem "jekyll-paginate"           # 포스트 목록 페이지네이션
gem "jekyll-sitemap"            # 검색엔진용 사이트맵 자동 생성
